BASIC
 L(10) FOR(I)=0 TO 300 STEP 1 ROF
 L(15)   IF I MOD 2==1 THEN PRINT "*" ELSE PRINT "!" FI
 L(20)   PRINT "HELLO"
 L(30)   FOR(J)=0 TO I STEP 1 ROF
 L(40)     PRINT " "
 L(50)   NEXT
 L(60) NEXT
 L(70) GOTO(10)
L(100) REPEAT
L(110)    PRINT "*"
L(120) UNTIL A==1 LITNU
L(130) END
L(200) LET A=3
L(210) PRINTV A
L(220) LET A=7
